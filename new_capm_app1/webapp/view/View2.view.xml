<mvc:View   controllerName="newcapmapp1.controller.View2"
            xmlns:mvc="sap.ui.core.mvc"  displayBlock="true"
            xmlns="sap.m" xmlns:core="sap.ui.core"
            xmlns:form="sap.ui.layout.form">
    <App id="masterid2">
        <pages>
            <Page id="idmaster2" title="Detail Page" titleAlignment="Center" >
                <content>
                    <ObjectHeader title="{odata>Name}" number="{odata>ID}" />

                    <form:SimpleForm editable="true" id="idform">
                        <form:title>
                            <core:Title text="Employee Record" icon="sap-icon://customer"></core:Title>
                        </form:title>
                        <Label text="Enter Emp ID"  design="Bold"></Label>
                        <Input width="15%" id="Empid" value="{odata>ID}" editable="false"></Input>                      

                        <Label text="Enter Emp Name" design="Bold"></Label>
                        <Input width="35%"  id="EmpName"  value="{odata>Name}" editable="false"></Input>         

                        <Label text="Enter Emp Profile" design="Bold"></Label>
                        <Input width="20%"  id="EmpPro" value="{odata>Profile}" editable="false"></Input>

                        <Label text="Enter Emp UnitPrice" design="Bold"></Label>
                        <Input width="30%"  id="EmpUnit" value="{odata>UnitPrice}" editable="false"></Input>           
                    </form:SimpleForm>

                    
                    
                </content>
            </Page>        
        </pages>
    </App>
</mvc:View>